<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menu_button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="싱글 플레이"
        android:layout_marginTop="70dp" />

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/menu_button1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/menu_button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="2인 플레이"
        android:layout_below="@+id/space1"
        android:layout_centerHorizontal="true"/>

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/menu_button2"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/menu_button3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="3인 플레이"
        android:layout_below="@+id/space2"
        android:layout_centerHorizontal="true"/>

    <Space
        android:id="@+id/space3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/menu_button3"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/menu_button4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="4인 플레이"
        android:layout_below="@+id/space3"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>